---
import { like } from '@/config'
import { LikeRanking } from '@/components/like'
import SectionBlock from '@/components/SectionBlock.astro'

interface Props {
  type?: 'most' | 'recent'
  title?: string
  limit?: number
}

const { type = 'most', title, limit = like.rankingCount } = Astro.props

// 如果点赞功能未启用，不显示
if (!like.enable || !like.showRanking) {
  return null
}

const defaultTitle = type === 'most' ? '最多点赞' : '最近点赞'
---

<SectionBlock title={title || defaultTitle}>
  <LikeRanking type={type} limit={limit} client:idle />
</SectionBlock>
